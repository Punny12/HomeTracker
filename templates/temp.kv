<HomePage>:
    cols:1
    BoxLayout:
        orientation: 'horizontal'
        size_hint_max_y: 175
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'INCOME'
            color: (0,0,0,1)
            size_hint:(1, 0.2)
        GridLayout:
            cols:2
            size_hint:(1,0.3)
            Label:
                text: 'Date'
                color:(0,0,0,1)
            TextInput:
                multiline: False
            Label:
                text: 'Category'
                color:(0,0,0,1)
            TextInput:
                multiline: False
            Label:
                text: 'Sub Category'
                color:(0,0,0,1)
            TextInput:
                multiline: False
            Label:
                text: 'Account'
                color:(0,0,0,1)
            TextInput:
                multiline: False
            Label:
                text: 'Amount'
                color:(0,0,0,1)
            TextInput:
                multiline: False
        BoxLayout:
            orientation:'vertical'
            size_hint:(1,0.3)
            Label:
                text:'Notes'
                color:(0,0,0,1)
            TextInput:
                multiline: True
        BoxLayout:
            orientation:'horizontal'
            size_hint:(1,0.2)
            Button:
                text: 'Clear'
            Button:
                text: 'Delete'
            Button:
                text: 'Add'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_max_y: 175
        padding:10
        Button:
            text: "*"
            size_hint:(.3,1)
        RoundedButton:
            text: "+"
            size_hint:(.3,1)
            on_press: root.display_form()

        Button:
            text: "*"
            size_hint:(.3,1)

<RoundedButton@Button>
    background_color:(0,0,0,0)
    background_normal:''
    canvas.before:
        Color:
            rgba:(1/255, 185/255, 234/255, 0.5)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius:[75]
